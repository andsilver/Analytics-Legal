<div class="wrapper-page">
  <div class="text-center">
      <a href="index.html" class="logo-lg"><i class="mdi mdi-radar"></i> <span>DeepLegal</span> </a>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { class: "form-horizontal m-t-20"}) do |f| %>

    <div class="form-group row">
      <div class="col-12">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="mdi mdi-account"></i></span>
          </div>
          <%= f.email_field :email, autofocus: true,
            class: "form-control", type:"text", required:"", placeholder: t('users.user') %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <div class="col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="mdi mdi-radar"></i></span>
                </div>
                <%= f.password_field :password, autocomplete: "off",
                  class: "form-control", type:"password", required: "", placeholder: t('menu.password')%>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-12">
            <div class="checkbox checkbox-primary">
              <%= f.check_box :remember_me %>
              <%= f.label t('menu.remember_me'), id: :remember_me %>
            </div>

        </div>
    </div>

    <div class="form-group text-right m-t-20">
        <div class="col-xs-12">
          <%= f.button t('menu.login'), class: "btn btn-primary btn-custom w-md waves-effect waves-light", type: "submit" %>
        </div>
    </div>

    <div class="form-group row m-t-30">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>




