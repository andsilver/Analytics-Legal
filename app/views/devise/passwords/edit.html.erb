<div class="wrapper-page">
  <div class="text-center">
      <a href="index.html" class="logo-lg"><i class="mdi mdi-radar"></i> <span>DeepLegal</span> </a>
  </div>

  <div class="text-center">
    <h3><%= t('menu.change_password') %></h3>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
    html: { method: :put, class: "form-horizontal m-t-20" }) do |f| %>

    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group m-b-0">
        <div class="input-group">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control',
            placeholder: t('menu.new_password'), required: "" %>
        </div>
        <% if @minimum_password_length %>
          <em class='text-muted'><%= "#{t('notices.min')} #{@minimum_password_length} #{t('notices.char')}" %>
          </em>
        <% end %>
    </div>

    <div class="form-group m-b-0">
        <div class="input-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',
            placeholder: t('menu.password_confirmation'), required: "" %>
        </div>
    </div>

    <div class="form-group text-right m-t-20">
        <div class="col-xs-12">
          <%= f.button t('buttons.update'), class: "btn btn-primary btn-custom w-md waves-effect waves-light", type: "submit" %>
        </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
