<div class="wrapper-page">
  <div class="text-center">
      <a href="index.html" class="logo-lg"><i class="mdi mdi-radar"></i> <span>DeepLegal</span> </a>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
    html: { method: :post, class: "form-horizontal m-t-20" }) do |f| %>

    <%= devise_error_messages! %>

    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= t('notices.enter_email') %>
    </div>

    <div class="form-group m-b-0">
        <div class="input-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control',
            placeholder: "Email", required: "" %>
          <span class="input-group-append">
            <%= f.button t('buttons.reset'), type: "submit", class: "btn btn-email btn-primary waves-effect waves-light" %>
          </span>
        </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>




