<div class="row list-user-container m-t-20">
  <div class="col-lg-12">
    <div>

      <div class="card-box">
        <h4 class="m-t-0 header-title">List of Users</h4>
        <table class="table m-t-20">
          <thead class="thead-light">
            <tr>
              <th>Company</th>
              <th>Company ID</th>
              <th>Country, city</th>
              <th>Phone Number</th>
              <th>Email</th>
              <th>User Type</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.company %></td>
                <td><%= user.company_id %></td>
                <td><%= "#{user.country}, #{user.city}"%></td>
                <td><%= user.phone_number %></td>
                <td><%= user.email %></td>
                <td><%= User::ROLES[user.role.to_sym] %></td>
                <td>
                  <%= link_to "Edit", edit_admin_user_path(user), class: 'm-r-5' %>
                  <% if current_user != user %>
                    <%= link_to "Delete", admin_user_path(user), method: :delete,
                    data: { confirm: 'Are you sure you want to delete this user?'} %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>